---
import Layout from './Layout.astro';
import ResponsiveImage from "../components/ResponsiveImage.astro";
import { InstagramShareButton } from "../components/InstagramShareButton";
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'artwork'>;
}

const { entry } = Astro.props;

let CampDataComponent;
if (entry.data['data-file']) {
  // Dynamically import the camp data component
  CampDataComponent = await import(`../components/data/${entry.data['data-file']}.jsx`);
} else {
  console.warn(`No data-file specified for ${entry.slug}`);
}
---

<Layout title={entry.data.title}>
  <!-- Back to Gallery Link -->
  <div class="bg-black w-full pt-20 pb-4">
    <div class="max-w-7xl mx-auto px-4">
      <a
        href="/artwork/japanese-american-internment-camps/"
        class="inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"/>
        </svg>
        Back to Gallery
      </a>
    </div>
  </div>

  <!-- Full-width image section with black background -->
  <div class="bg-black w-full py-16">
    <div class="max-w-7xl mx-auto px-4 flex flex-col items-center">
      <ResponsiveImage
        imageSlug={entry.data.imageSlug || entry.slug}
        alt={`Picture of ${entry.data.name} by Dr. Masumi Hayashi`}
        className="rounded-md max-w-[95vw] max-h-[85vh] object-contain"
        loading="eager"
      />
      <figcaption class="text-museum-white bg-black text-center mt-6 space-y-2">
        <p class="text-xl font-medium italic">{entry.data.name}</p>
        {(entry.data.city || entry.data.state || entry.data.country) && (
          <p class="text-base">
            {[entry.data.city, entry.data.state, entry.data.country].filter(Boolean).join(', ')}
          </p>
        )}
        <p class="text-base">
          {entry.data.year}, {entry.data.media}
          {entry.data.size && `, ${entry.data.size}`}
        </p>
        <p class="text-sm opacity-70">Artist: Dr. Masumi Hayashi</p>
      </figcaption>
    </div>
  </div>

  <!-- Instagram Share Button -->
  <div class="bg-black w-full pb-12">
    <div class="max-w-7xl mx-auto px-4 flex justify-center">
      <InstagramShareButton artwork={entry} client:load />
    </div>
  </div>

  <!-- Research section with vintage paper background -->
  <div class="bg-vintage-paper text-vintage-ink w-full py-6 sm:py-8 md:py-12 mt-16 sm:mt-20 md:mt-24">
    <div class="mx-4 sm:mx-6 md:mx-8">
      <div class="camp-data-container max-w-6xl mx-auto">
        {CampDataComponent && <CampDataComponent.default />}
      </div>
    </div>
  </div>

  <!-- Related artworks from same camp -->
  <div class="bg-white w-full py-16">
    <slot />
  </div>

  <style>
    :global(.camp-data) {
      width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    :global(.camp-data h2) {
      font-size: 1.25rem;
      font-weight: 300;
      margin-bottom: 1.5rem;
      text-align: center;
      color: var(--vintage-ink);
      font-family: var(--font-typewriter);
    }

    @media (min-width: 640px) {
      :global(.camp-data h2) {
        font-size: 1.5rem;
        margin-bottom: 2rem;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data h2) {
        font-size: 1.875rem;
        margin-bottom: 2.5rem;
      }
    }

    :global(.camp-data dl) {
      display: grid;
      row-gap: 1rem;
    }

    @media (min-width: 640px) {
      :global(.camp-data dl) {
        row-gap: 1.5rem;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data dl) {
        row-gap: 2rem;
      }
    }

    :global(.camp-data dt) {
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
      color: rgba(var(--vintage-ink-rgb), 0.7);
      font-family: var(--font-typewriter);
    }

    @media (min-width: 640px) {
      :global(.camp-data dt) {
        font-size: 1rem;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data dt) {
        font-size: 1.125rem;
      }
    }

    :global(.camp-data dd) {
      font-size: 0.875rem;
      padding-left: 1rem;
      border-left: 1px solid rgba(var(--vintage-ink-rgb), 0.2);
      color: var(--vintage-ink);
      line-height: 1.5;
    }

    @media (min-width: 640px) {
      :global(.camp-data dd) {
        font-size: 1rem;
        padding-left: 1.5rem;
        line-height: 1.625;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data dd) {
        font-size: 1.125rem;
        padding-left: 2rem;
      }
    }

    :global(.camp-data p) {
      font-size: 0.875rem;
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    @media (min-width: 640px) {
      :global(.camp-data p) {
        font-size: 1rem;
        margin-bottom: 1.5rem;
        line-height: 1.625;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data p) {
        font-size: 1.125rem;
      }
    }

    :global(.camp-data ul) {
      padding-left: 1rem;
      list-style-type: disc;
    }

    @media (min-width: 640px) {
      :global(.camp-data ul) {
        padding-left: 1.5rem;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data ul) {
        padding-left: 2rem;
      }
    }

    :global(.camp-data li) {
      font-size: 0.875rem;
      margin-bottom: 0.75rem;
      line-height: 1.5;
    }

    @media (min-width: 640px) {
      :global(.camp-data li) {
        font-size: 1rem;
        line-height: 1.625;
      }
    }

    @media (min-width: 768px) {
      :global(.camp-data li) {
        font-size: 1.125rem;
      }
    }

    .camp-data-container {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    @media (min-width: 640px) {
      .camp-data-container {
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      }
    }

    /* Optimize line length for readability */
    :global(.camp-data dd),
    :global(.camp-data p) {
      max-width: 65ch;
    }
  </style>
</Layout>
---
import MainHead from "./MainHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FontLoader from "../components/FontLoader.astro";
import '@styles/global.css';

const {
  title = "Masumi Hayashi",
  description = "Masumi Hayashi's panoramic photocollage artwork dealing with the Japanese American Internment Camps",
  classes = "",
} = Astro.props;
---

<html lang="en">
  <MainHead title={title} description={description}>
    <FontLoader />
  </MainHead>
  <body class="bg-museum-beige text-museum-dark font-sans min-h-screen">
    <div class={`flex flex-col min-h-screen ${classes}`}>
      <Header />

      <main class="flex-grow">
        <slot> Default text for unnamed slot </slot>

        <slot name="test-slot" />
      </main>

      <Footer class="mt-auto" />
    </div>
    <style>
      main {
        margin-bottom: 80px;
        padding-top: 10px;
      }
      footer {
        position: fixed;
        bottom: 0;
        height: 4rem; /* h-16 = 4rem */
      }
    </style>
  </body>
</html>

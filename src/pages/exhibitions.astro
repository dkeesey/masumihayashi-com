---
import Layout from '@layouts/Layout.astro';
import ResponsiveImage from '@components/ResponsiveImage.astro';
import { Card, CardContent } from '@components/ui/card';

const pageTitle = "Current Exhibitions | Masumi Hayashi";
const metaDescription = "Current and upcoming exhibitions featuring Dr. Masumi Hayashi's panoramic photo collages at SFMOMA, National Gallery of Art, Canton Museum, and more.";
---

<Layout title={pageTitle} description={metaDescription}>

  <!-- Hero Banner: NOW SHOWING at SFMOMA -->
  <section class="relative w-full bg-gradient-to-br from-primary via-primary/90 to-primary/80 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-6 md:px-12 lg:px-24 py-16 md:py-20">
      <div class="flex items-center gap-3 mb-6">
        <span class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-medium">
          <span class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></span>
          NOW SHOWING
        </span>
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-serif font-bold text-white leading-tight mb-6">
        (Re)Constructing History
      </h1>

      <div class="grid md:grid-cols-2 gap-8 items-start">
        <div class="space-y-4">
          <div class="space-y-2">
            <p class="text-2xl md:text-3xl text-white/95 font-light">
              San Francisco Museum of Modern Art
            </p>
            <p class="text-lg text-white/80">
              October 4, 2025 – Ongoing
            </p>
          </div>

          <p class="text-lg text-white/90 leading-relaxed max-w-xl">
            Masumi Hayashi's EPA Superfund Site photograph featured in SFMOMA's exploration of photography's role in constructing historical narratives.
          </p>

          <div class="flex gap-4 pt-4">
            <a
              href="https://www.sfmoma.org"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-white text-primary px-6 py-3 rounded-lg font-medium hover:bg-white/90 transition-colors"
            >
              Visit SFMOMA
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Featured Work Thumbnail -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
          <p class="text-xs uppercase tracking-wider text-white/70 mb-3">Featured Work</p>
          <div class="rounded-lg overflow-hidden shadow-2xl">
            <ResponsiveImage
              imageSlug="industrial-excess-landfill-uniontown-ohio"
              alt="EPA Superfund Site, Fields Brook Stream, Ashtabula, Ohio"
              className="w-full"
            />
          </div>
          <p class="text-sm text-white/80 mt-3 leading-relaxed">
            <em>EPA Superfund Site, Fields Brook Stream, Ashtabula, Ohio</em>, 1990
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="max-w-7xl mx-auto px-6 md:px-12 lg:px-24 py-16 md:py-24">

    <!-- Current Exhibitions Section -->
    <section class="mb-20">
      <div class="flex items-center gap-4 mb-10">
        <h2 class="text-3xl md:text-4xl font-serif font-semibold">Current Exhibitions</h2>
        <div class="flex-grow h-px bg-border"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8">

        <!-- National Gallery Tour -->
        <Card className="shadow-lg hover:shadow-2xl transition-all duration-300 border-t-4 border-primary">
          <CardContent className="p-8 space-y-4">
            <div class="flex items-start justify-between gap-4">
              <div>
                <span class="inline-flex items-center gap-2 bg-primary/10 text-primary px-3 py-1 rounded-full text-xs font-medium mb-3">
                  <span class="w-2 h-2 bg-primary rounded-full"></span>
                  NATIONAL TOUR
                </span>
                <h3 class="text-2xl font-serif font-semibold mb-2">
                  Beneath the Surface
                </h3>
                <p class="text-sm text-muted-foreground">
                  Mining and American Photography
                </p>
              </div>
            </div>

            <div class="space-y-3 pt-4 border-t">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">National Gallery of Art</p>
                  <p class="text-sm text-muted-foreground">Washington, DC</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">Milwaukee Art Museum</p>
                  <p class="text-sm text-muted-foreground">Milwaukee, WI</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">Amon Carter Museum of American Art</p>
                  <p class="text-sm text-muted-foreground">Fort Worth, TX</p>
                </div>
              </div>
            </div>

            <p class="text-sm leading-relaxed pt-4 border-t">
              A traveling exhibition exploring the intersection of mining, industry, and American landscape photography.
              Features Hayashi's documentation of post-industrial sites.
            </p>

            <div class="flex gap-3 pt-4">
              <a
                href="https://www.nga.gov"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-primary hover:underline inline-flex items-center gap-1 font-medium"
              >
                National Gallery →
              </a>
            </div>
          </CardContent>
        </Card>

        <!-- SFMOMA Card (Duplicate for Grid) -->
        <Card className="shadow-lg hover:shadow-2xl transition-all duration-300 border-t-4 border-primary">
          <CardContent className="p-8 space-y-4">
            <div>
              <span class="inline-flex items-center gap-2 bg-red-100 text-red-700 px-3 py-1 rounded-full text-xs font-medium mb-3">
                <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                NOW SHOWING
              </span>
              <h3 class="text-2xl font-serif font-semibold mb-2">
                (Re)Constructing History
              </h3>
              <p class="text-sm text-muted-foreground">
                Permanent Collection Rotation
              </p>
            </div>

            <div class="space-y-3 pt-4 border-t">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">San Francisco Museum of Modern Art</p>
                  <p class="text-sm text-muted-foreground">San Francisco, California</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">October 4, 2025 – Ongoing</p>
                  <p class="text-sm text-muted-foreground">Curator: Delphine Sims</p>
                </div>
              </div>
            </div>

            <p class="text-sm leading-relaxed pt-4 border-t">
              Exhibition examining how photography constructs historical narratives. Features <em>EPA Superfund Site, Fields Brook Stream, Ashtabula, Ohio</em> (1990).
            </p>

            <div class="flex gap-3 pt-4">
              <a
                href="https://www.sfmoma.org"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-primary hover:underline inline-flex items-center gap-1 font-medium"
              >
                Visit SFMOMA →
              </a>
            </div>
          </CardContent>
        </Card>

      </div>
    </section>

    <!-- Upcoming Exhibitions Section -->
    <section class="mb-20">
      <div class="flex items-center gap-4 mb-10">
        <h2 class="text-3xl md:text-4xl font-serif font-semibold">Upcoming Exhibitions</h2>
        <div class="flex-grow h-px bg-border"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8">

        <!-- Canton Museum -->
        <Card className="shadow-lg hover:shadow-2xl transition-all duration-300 border-t-4 border-orange-500">
          <CardContent className="p-8 space-y-4">
            <div>
              <span class="inline-flex items-center gap-2 bg-orange-100 text-orange-700 px-3 py-1 rounded-full text-xs font-medium mb-3">
                OPENING NOVEMBER 2025
              </span>
              <h3 class="text-2xl font-serif font-semibold mb-2">
                Shattered Glass
              </h3>
              <p class="text-sm text-muted-foreground">
                The Women Who Elevated American Art
              </p>
            </div>

            <div class="space-y-3 pt-4 border-t">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-orange-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">Canton Museum of Art</p>
                  <p class="text-sm text-muted-foreground">Canton, Ohio</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-orange-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">November 2025 – March 2026</p>
                  <p class="text-sm text-muted-foreground">Curator: Kate Hatcher</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-orange-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">Featured Works</p>
                  <p class="text-sm text-muted-foreground">Two panoramic photo collages from internment camps</p>
                </div>
              </div>
            </div>

            <p class="text-sm leading-relaxed pt-4 border-t">
              Group exhibition celebrating pioneering women artists who transformed American art history.
              Features Hayashi's internment camp documentation loaned from Akron Art Museum. Exhibition catalog forthcoming.
            </p>

            <div class="flex gap-3 pt-4">
              <a
                href="https://www.cantonart.org"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-orange-600 hover:underline inline-flex items-center gap-1 font-medium"
              >
                Canton Museum →
              </a>
            </div>
          </CardContent>
        </Card>

        <!-- Cleveland Arts Prize -->
        <Card className="shadow-lg hover:shadow-2xl transition-all duration-300 border-t-4 border-blue-500">
          <CardContent className="p-8 space-y-4">
            <div>
              <span class="inline-flex items-center gap-2 bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-medium mb-3">
                CONFIRMED – DETAILS TBA
              </span>
              <h3 class="text-2xl font-serif font-semibold mb-2">
                Cleveland Arts Prize
              </h3>
              <p class="text-sm text-muted-foreground">
                Past Winners Retrospective
              </p>
            </div>

            <div class="space-y-3 pt-4 border-t">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">Cleveland, Ohio</p>
                  <p class="text-sm text-muted-foreground">Venue TBA</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="space-y-1">
                  <p class="font-medium">Confirmed October 7, 2025</p>
                  <p class="text-sm text-muted-foreground">Contact: Mike Gentile</p>
                </div>
              </div>
            </div>

            <p class="text-sm leading-relaxed pt-4 border-t">
              Retrospective exhibition featuring past Cleveland Arts Prize winners. Dr. Hayashi was the first photographer
              to receive the Cleveland Arts Prize in 1994.
            </p>

            <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r mt-4">
              <p class="text-xs text-blue-900 leading-relaxed">
                <strong>Updates coming soon.</strong> Check back for exhibition dates, venue, and featured works.
              </p>
            </div>
          </CardContent>
        </Card>

      </div>
    </section>

    <!-- Gallery Preview: Featured Works -->
    <section class="mb-20">
      <div class="flex items-center gap-4 mb-10">
        <h2 class="text-3xl md:text-4xl font-serif font-semibold">Featured Works in Current Exhibitions</h2>
        <div class="flex-grow h-px bg-border"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <figure class="group">
          <div class="overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all">
            <ResponsiveImage
              imageSlug="industrial-excess-landfill-uniontown-ohio"
              alt="EPA Superfund Site, Industrial Excess Landfill"
            />
          </div>
          <figcaption class="mt-4 space-y-1">
            <p class="text-sm font-semibold">SFMOMA Exhibition</p>
            <p class="text-xs text-muted-foreground">
              <em>EPA Superfund Site, Fields Brook Stream</em>, 1990
            </p>
          </figcaption>
        </figure>

        <figure class="group">
          <div class="overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all">
            <ResponsiveImage
              imageSlug="heart-mountain-internment-camp-interior"
              alt="Heart Mountain Relocation Camp, Interior"
            />
          </div>
          <figcaption class="mt-4 space-y-1">
            <p class="text-sm font-semibold">Canton Museum (Upcoming)</p>
            <p class="text-xs text-muted-foreground">
              <em>Heart Mountain Relocation Camp, Interior</em>
            </p>
          </figcaption>
        </figure>

        <figure class="group">
          <div class="overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all">
            <ResponsiveImage
              imageSlug="manzanar-internment-camp-monument"
              alt="Manzanar Relocation Camp, Monument"
            />
          </div>
          <figcaption class="mt-4 space-y-1">
            <p class="text-sm font-semibold">Canton Museum (Upcoming)</p>
            <p class="text-xs text-muted-foreground">
              <em>Manzanar Relocation Camp, Tree View</em>
            </p>
          </figcaption>
        </figure>
      </div>
    </section>

    <!-- Past Exhibitions Teaser -->
    <section class="bg-muted/50 rounded-2xl p-10 md:p-16">
      <h2 class="text-3xl md:text-4xl font-serif font-semibold mb-6">Past Exhibitions</h2>
      <p class="text-lg leading-relaxed text-muted-foreground mb-8 max-w-3xl">
        Dr. Hayashi's work has been exhibited internationally at major institutions including the International Center
        for Photography (New York), Los Angeles County Museum of Art, Japanese American National Museum (2003 retrospective),
        Tokyo Museum of Photography, Ludwig Museum (Germany), Victoria and Albert Museum (London), and Cleveland Museum of Art.
      </p>

      <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="space-y-2">
          <p class="text-sm font-semibold">Recent Cleveland Exhibitions (2017-2018)</p>
          <ul class="text-sm text-muted-foreground space-y-1">
            <li>• Cleveland State University (Feb 2018)</li>
            <li>• Reflect Space (Jun 2018)</li>
            <li>• Tregoning and Co. (Sep 2018)</li>
          </ul>
        </div>

        <div class="space-y-2">
          <p class="text-sm font-semibold">Major Retrospectives</p>
          <ul class="text-sm text-muted-foreground space-y-1">
            <li>• JANM Retrospective (2003)</li>
            <li>• Memorial Exhibitions (2007)</li>
            <li>• Cleveland Museum of Art (Ongoing)</li>
          </ul>
        </div>

        <div class="space-y-2">
          <p class="text-sm font-semibold">International Venues</p>
          <ul class="text-sm text-muted-foreground space-y-1">
            <li>• Tokyo Museum of Photography</li>
            <li>• Ludwig Museum, Germany</li>
            <li>• V&A Museum, London</li>
          </ul>
        </div>
      </div>

      <a href="/timeline" class="text-primary hover:underline inline-flex items-center gap-2 font-medium">
        View Complete Exhibition History (1976-2025)
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </section>

  </article>

  <!-- CTA Footer -->
  <section class="bg-gradient-to-br from-primary/10 via-primary/5 to-transparent py-16 md:py-20 border-t">
    <div class="max-w-4xl mx-auto px-6 md:px-12 text-center space-y-6">
      <h2 class="text-3xl md:text-4xl font-serif font-semibold">Exhibition Inquiries</h2>
      <p class="text-lg text-muted-foreground leading-relaxed">
        Interested in exhibiting Masumi Hayashi's work at your institution?
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-lg font-medium hover:bg-primary/90 transition-colors text-lg"
      >
        Contact the Foundation
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </a>
    </div>
  </section>

  <!-- Navigation Footer -->
  <section class="bg-muted/50 py-16 md:py-20 border-t">
    <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-24">
      <h2 class="text-2xl font-serif font-semibold mb-8 text-center">Explore More</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <Card className="hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <CardContent className="p-6 h-full flex flex-col">
            <h3 class="text-lg font-semibold mb-2">Artworks</h3>
            <p class="text-sm text-muted-foreground mb-4 flex-grow">
              Browse all 8 major series including Internment Camps, EPA Superfund Sites, and Sacred Architectures
            </p>
            <a href="/artworks" class="text-primary hover:underline text-sm font-medium inline-flex items-center gap-1">
              Browse Artworks
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </CardContent>
        </Card>

        <Card className="hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <CardContent className="p-6 h-full flex flex-col">
            <h3 class="text-lg font-semibold mb-2">Biography</h3>
            <p class="text-sm text-muted-foreground mb-4 flex-grow">
              Learn about Dr. Hayashi's life, artistic evolution, and pioneering panoramic photo collage technique
            </p>
            <a href="/biography" class="text-primary hover:underline text-sm font-medium inline-flex items-center gap-1">
              Read Biography
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </CardContent>
        </Card>

        <Card className="hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <CardContent className="p-6 h-full flex flex-col">
            <h3 class="text-lg font-semibold mb-2">Collections</h3>
            <p class="text-sm text-muted-foreground mb-4 flex-grow">
              View the 20+ major museum collections holding Dr. Hayashi's panoramic photo collages
            </p>
            <a href="/collections" class="text-primary hover:underline text-sm font-medium inline-flex items-center gap-1">

---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ArtworkWithCampDataLayout from "../../../layouts/ArtworkWithCampDataLayout.astro";
import RelatedArtworks from "../../../components/RelatedArtworks.astro";

export async function getStaticPaths() {
  const artworkEntries = await getCollection("artwork");
  const internmentCampsArtworks = artworkEntries.filter(
    (entry: CollectionEntry<"artwork">) =>
      entry.data.series === "Japanese-American Internment Camps" ||
      entry.data.series === "Japanese-Canadian Internment Camps"
  );

  return internmentCampsArtworks.map((entry: CollectionEntry<"artwork">) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry }: { entry: CollectionEntry<"artwork"> } = Astro.props;

// Fetch related artworks from same camp first, then fill with other camps if needed
const allArtworks = await getCollection("artwork");

// Get artworks from same camp (excluding current)
const sameCampWorks = allArtworks
  .filter((art) =>
    art.data['data-file'] === entry.data['data-file'] &&
    art.slug !== entry.slug
  );

// If fewer than 4 from same camp, fill in with other internment camp artworks
let relatedWorks = [...sameCampWorks];
if (relatedWorks.length < 4) {
  const otherCampWorks = allArtworks
    .filter((art) =>
      art.data.series === 'Japanese-American Internment Camps' &&
      art.data['data-file'] !== entry.data['data-file'] &&
      art.slug !== entry.slug
    );
  relatedWorks = [...relatedWorks, ...otherCampWorks].slice(0, 6);
} else {
  relatedWorks = relatedWorks.slice(0, 6);
}
---

<ArtworkWithCampDataLayout entry={entry}>
  <!-- Related Artworks Component -->
  {relatedWorks.length > 0 && (
    <RelatedArtworks
      artworks={relatedWorks}
      seriesName={
        relatedWorks.length === sameCampWorks.length && relatedWorks.length > 0
          ? entry.data['data-file']?.replace(/-data$/, '').replace(/-/g, ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())
          : 'Japanese-American Internment Camps'
      }
      seriesPath={`/artwork/japanese-american-internment-camps`}
      maxItems={6}
    />
  )}
</ArtworkWithCampDataLayout>
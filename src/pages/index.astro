---
import Layout from "@layouts/Layout.astro";
import ResponsiveImage from "@components/ResponsiveImage.astro";
import SchemaScript from "@components/SchemaScript.astro";
import { getCollection } from 'astro:content';
import {
  generatePersonSchema,
  generateOrganizationSchema,
  generateWebSiteSchema
} from "@lib/schema";

// Get artworks for featured series previews
const allArtworks = await getCollection("artwork");

// Define series with featured artwork
const featuredSeries = [
  {
    name: "Japanese American Internment Camps",
    description: "Documenting sites of WWII incarceration where 120,000 Japanese Americans were imprisoned",
    path: "/artwork/japanese-american-internment-camps/",
    imageSlug: "manzanar-internment-camp-monument",
    artworkName: "Manzanar Internment Camp Monument",
    count: allArtworks.filter(a => a.data.series === "Japanese-American Internment Camps").length
  },
  {
    name: "Sacred Architectures",
    description: "Temples and spiritual sites across Asia captured in panoramic photo collages",
    path: "/artwork/sacred-architectures/",
    imageSlug: "angkor-wat-no-1-angkor-siem-reap-cambodia",
    artworkName: "Angkor Wat No. 1",
    count: allArtworks.filter(a => a.data.series === "Sacred Architectures").length
  },
  {
    name: "Post-Industrial Landscapes",
    description: "Rust Belt sites and urban decay documenting America's industrial decline",
    path: "/artwork/post-industrial/",
    imageSlug: "campbell-works-plant-youngstown-ohio",
    artworkName: "Campbell Works Plant, Youngstown",
    count: allArtworks.filter(a => a.data.series === "Post-Industrial Landscapes").length
  },
  {
    name: "Prisons & Institutions",
    description: "Sites of confinement including Alcatraz and Eastern State Penitentiary",
    path: "/artwork/prisons/",
    imageSlug: "alcatraz-penitentiary-cellblock-san-francisco-california",
    artworkName: "Alcatraz Penitentiary Cellblock",
    count: allArtworks.filter(a => a.data.series === "Prisons & Institutions").length
  },
  {
    name: "War & Military Sites",
    description: "Cold War installations and military bases documenting America's defense infrastructure",
    path: "/artwork/war-military/",
    imageSlug: "b-52s-airplane-graveyard-tucson-arizona",
    artworkName: "B-52s Airplane Graveyard, Tucson",
    count: allArtworks.filter(a => a.data.series === "War & Military Sites").length
  },
  {
    name: "EPA Superfund Sites",
    description: "Environmental cleanup sites documenting toxic contamination across America",
    path: "/artwork/epa-superfund/",
    imageSlug: "love-canal-no-1-niagra-falls-new-york",
    artworkName: "Love Canal No. 1",
    count: allArtworks.filter(a => a.data.series === "EPA Superfund Sites").length
  },
  {
    name: "City Works",
    description: "Urban architecture and public spaces in American cities",
    path: "/artwork/city-works/",
    imageSlug: "old-arcade-cleveland-ohio",
    artworkName: "Old Arcade, Cleveland",
    count: allArtworks.filter(a => a.data.series === "City Works").length
  },
  {
    name: "Public Commissions",
    description: "Commissioned panoramic photo collages for public institutions",
    path: "/artwork/commissions/",
    imageSlug: "union-terminal-cincinnati-ohio",
    artworkName: "Union Terminal, Cincinnati",
    count: allArtworks.filter(a => a.data.series === "Public Commissions").length
  }
];

const seoConfig = {
  title: "Masumi Hayashi - Panoramic Photography and Social Documentary",
  description: "Discover the panoramic photo collages of Masumi Hayashi, documenting Japanese American internment camps, sacred architectures, and sites of environmental and social trauma.",
  keywords: ["panoramic photography", "photo collages", "Japanese American history", "social documentary"],
  type: "website",
};

// Generate structured data for AI SEO
const schemas = [
  generatePersonSchema(),
  generateOrganizationSchema(),
  generateWebSiteSchema()
];
---

<Layout
  title={seoConfig.title}
  description={seoConfig.description}
>
  <SchemaScript schema={schemas} slot="head" />

  <!-- Hero Section -->
  <section class="relative bg-black text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl lg:text-7xl font-bold mb-6 leading-tight">
          Masumi Hayashi
        </h1>
        <p class="text-xl md:text-2xl lg:text-3xl text-white/90 mb-8 leading-relaxed">
          Panoramic photo collages documenting sites of historical trauma, sacred spaces, and environmental change
        </p>
        <p class="text-lg md:text-xl text-white/70 mb-10 max-w-3xl">
          Professor Masumi Hayashi (1945-2006) pioneered a unique form of panoramic photography, creating expansive photo collages that transform landscapes of memory into powerful visual testimonies.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="/artwork/"
            class="px-8 py-4 bg-white text-black rounded-full font-medium hover:bg-white/90 transition-colors text-lg"
          >
            Explore All Artwork
          </a>
          <a
            href="/about/"
            class="px-8 py-4 bg-white/10 text-white rounded-full font-medium hover:bg-white/20 transition-colors text-lg border border-white/20"
          >
            About Masumi
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Series Grid -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Explore by Series
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {allArtworks.length} panoramic photo collages across 8 thematic series
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredSeries.filter(s => s.count > 0).map((series) => (
          <a
            href={series.path}
            class="group block bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300"
          >
            <div class="aspect-[4/3] bg-black relative overflow-hidden">
              <ResponsiveImage
                imageSlug={series.imageSlug}
                alt={series.artworkName}
                className="w-full h-full group-hover:scale-105 transition-transform duration-500"
                loading="eager"
              />
            </div>
            <div class="p-6">
              <div class="flex items-baseline justify-between mb-2">
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-black">
                  {series.name}
                </h3>
                <span class="text-sm text-gray-500">{series.count}</span>
              </div>
              <p class="text-sm text-gray-600 leading-relaxed">
                {series.description}
              </p>
            </div>
          </a>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/artwork/"
          class="inline-block px-8 py-3 bg-gray-900 text-white rounded-full font-medium hover:bg-gray-800 transition-colors"
        >
          View All {allArtworks.length} Artworks →
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="bg-gray-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          A Legacy of Visual Testimony
        </h2>
        <div class="prose prose-lg max-w-none">
          <p>
            Born in 1945 at the Gila River concentration camp in Arizona, Masumi Hayashi spent her life documenting the landscapes that shaped American history. Her innovative panoramic photo collages—each assembled from hundreds of individual exposures—transformed sites of confinement, environmental degradation, and cultural significance into powerful visual narratives.
          </p>
          <p>
            As a Professor of Art at Cleveland State University for over three decades, Hayashi dedicated her practice to creating visual records of places where trauma and memory intersect: Japanese American internment camps, abandoned industrial sites, toxic Superfund locations, and sacred architectures across Asia.
          </p>
          <p>
            Her work has been exhibited internationally and is held in major museum collections including the Museum of Modern Art, Whitney Museum of American Art, and Smithsonian American Art Museum.
          </p>
          <div class="mt-8">
            <a
              href="/about/"
              class="inline-block px-6 py-3 bg-gray-900 text-white rounded-full font-medium hover:bg-gray-800 transition-colors"
            >
              Read Full Biography →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Current Exhibitions CTA (if applicable) -->
  <section class="bg-black text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Currently on View
      </h2>
      <p class="text-lg text-white/80 mb-8">
        Masumi Hayashi's work is featured in exhibitions across the United States
      </p>
      <a
        href="/exhibitions/"
        class="inline-block px-8 py-4 bg-white text-black rounded-full font-medium hover:bg-white/90 transition-colors text-lg"
      >
        View Current Exhibitions →
      </a>
    </div>
  </section>
</Layout>

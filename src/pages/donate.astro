---
import DonationLayout from '../layouts/DonationLayout.astro';

// TODO: Replace with your actual Stripe Payment Link URL after creating it in Stripe Dashboard
const STRIPE_PAYMENT_LINK = "https://buy.stripe.com/YOUR_PAYMENT_LINK_ID";
---

<DonationLayout>
    <div class="container mx-auto px-4 mt-24 mb-32">
        <div class="max-w-4xl mx-auto">
            <div class="p-8 pt-16 rounded-xl bg-white lg:px-16 lg:pt-24" style="box-shadow: 4px 6px 12px rgba(0, 0, 0, 0.15);">
                <h1 class="text-4xl font-bold mb-6 text-center text-gray-900">Support the Masumi Hayashi Foundation</h1>

                <p class="mb-8 text-lg text-center text-gray-700">
                    Your donation helps preserve and share Masumi Hayashi's artistic and cultural legacy for future generations.
                </p>

                <!-- Donation Options -->
                <div class="max-w-2xl mx-auto space-y-6">
                    <!-- One-time Donation -->
                    <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-500 transition-colors">
                        <h2 class="text-2xl font-semibold mb-3 text-gray-900">One-Time Donation</h2>
                        <p class="text-gray-600 mb-4">Make a single contribution to support our mission</p>
                        <a
                            href={STRIPE_PAYMENT_LINK}
                            class="inline-block w-full sm:w-auto px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200 text-center"
                        >
                            Donate Now
                        </a>
                    </div>

                    <!-- Recurring Donation -->
                    <div class="border-2 border-blue-500 rounded-lg p-6 bg-blue-50">
                        <div class="flex items-start justify-between mb-3">
                            <h2 class="text-2xl font-semibold text-gray-900">Monthly Support</h2>
                            <span class="bg-blue-600 text-white text-xs font-semibold px-3 py-1 rounded-full">Recommended</span>
                        </div>
                        <p class="text-gray-600 mb-4">Join as a sustaining member with automatic monthly donations</p>
                        <a
                            href={STRIPE_PAYMENT_LINK}
                            class="inline-block w-full sm:w-auto px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200 text-center"
                        >
                            Become a Monthly Donor
                        </a>
                    </div>

                    <!-- Tax Deductibility Notice -->
                    <div class="bg-gray-50 rounded-lg p-6 text-sm text-gray-700">
                        <p class="font-semibold mb-2">Tax-Deductible Donation</p>
                        <p>The Masumi Hayashi Foundation is a 501(c)(3) nonprofit organization. Your donation is tax-deductible to the extent allowed by law. You will receive a tax receipt via email after your donation.</p>
                        <p class="mt-2 text-xs text-gray-500">EIN: [Your EIN Number]</p>
                    </div>

                    <!-- Other Ways to Give -->
                    <div class="text-center pt-6 border-t border-gray-200">
                        <p class="text-gray-600 mb-4">Prefer to donate by check or wire transfer?</p>
                        <a href="/contact" class="text-blue-600 hover:text-blue-700 font-medium">Contact us for alternative donation methods â†’</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</DonationLayout>

<style>
    :global(body) {
        background-color: #cccccc;
    }
</style>
